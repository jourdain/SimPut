md-toolbar
    
    &.simput-header
        background #0a0a0a
        color #fff

.file-drag
    cursor pointer
    background #ffffff
    padding 20px

md-content.md-default-theme
    background none

md-content#drop-data-model
    background none

@keyframes blink { 
    0% { background: #fff; }
    50% { background: #ccc; }
    100% { background: #fff; }
}

md-content#drop-data-model.drag-over
    background #eee
    animation blink 2s linear infinite

.nav
    list-style outside none none
    margin-bottom 0
    padding-left 0

ul
    margin-top 0


.simput-property
    margin-top 30px

.simput-property-panel label
    color rgba(0,0,0,0.26)

.simput-property-head-group
   margin-top 20px
   margin-bottom 20px
   position relative
   left -5px


[ng-click], [ui-sref]
    cursor pointer

strong[title]
    font-size 1.5em

.width-100
    width 100%

    input
        width 100%

.width-90
    width 90%

    input
        width 90%

.text-center
    text-align center

button.md-button.md-fab.help-button
    background #ccc

button.md-button.md-fab.help-button.md-default-theme:hover
    background #aaa

.md-button.md-fab.help-button
    height 25px
    width 25px
    padding 0
    margin 0
    background-color #aaa

