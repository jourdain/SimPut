div.simput-property(layout="row", layout-align="space-around center")
    label(flex="20")
        | {{ property.label }}

    md-input-container(flex="20")
        label
            | {{ property.components[0] }}
        input(ng-model="data[property.id][0]")

    md-input-container(flex="20")
        label
            | {{ property.components[1] }}
        input(ng-model="data[property.id][1]")

    md-input-container(flex="20")
        label
            | {{ property.components[2] }}
        input(ng-model="data[property.id][2]")

    span(flex)

    md-button.md-fab.help-button(aria-label="Toggle help", ng-click="toggleLocalHelp(property.id)")
        i.fa.fa-fw.fa-question.md-primary
