div.simput-property(layout="row", layout-align="space-around center")
    label(flex="20")
        | {{ property.label }}
    div(layout="column", flex="70")
        div(layout="row", flex)
            md-input-container(flex="33")
                label
                    | {{ property.components[0] }}
                input(ng-model="data[property.id][0]")

            md-input-container(flex="33")
                label
                    | {{ property.components[1] }}
                input(ng-model="data[property.id][1]")

            md-input-container(flex="33")
                label
                    | {{ property.components[2] }}
                input(ng-model="data[property.id][2]")

        div(layout="row", flex)
            span(flex="33")
                
            md-input-container(flex="33")
                label
                    | {{ property.components[3] }}
                input(ng-model="data[property.id][3]")

            md-input-container(flex="33")
                label
                    | {{ property.components[4] }}
                input(ng-model="data[property.id][4]")

        div(layout="row", flex)
            span(flex="66")
                
            md-input-container(flex="33")
                label
                    | {{ property.components[5] }}
                input(ng-model="data[property.id][5]")

    span(flex)

    md-button.md-fab.help-button(aria-label="Toggle help", ng-click="toggleLocalHelp(property.id)")
        i.fa.fa-fw.fa-question.md-primary
